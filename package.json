{
  "name": "pangu",
  "version": "0.0.0",
  "description": "tools for pangu",
  "main": "bin/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint ./packages --ext=.js",
    "lint:fix": "eslint ./packages --ext=.js --fix",
    "release": "lerna publish --conventional-commits",
    "build": "lerna run build",
    "postinstall": "lerna bootstrap"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:open-data-plan/pangu.git"
  },
  "keywords": [
    "cli",
    "react",
    "redux"
  ],
  "author": "kagawagao <kingsongao1221@gmail.com> (https://kingsongao.com/)",
  "license": "MIT",
  "devDependencies": {
    "@opd/eslint-config-pangu": "file:./packages/eslint-config-pangu",
    "@opd/eslint-config-typescript": "file:./packages/eslint-config-typescript",
    "@opd/prettier-config-pangu": "file:./packages/prettier-config-pangu",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "./packages/prettier-config-pangu/lib/index.js"
}
